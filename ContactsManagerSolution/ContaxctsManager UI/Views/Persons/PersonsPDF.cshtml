@model IEnumerable<PersonResponse>
@{
    Layout = null;
}

<link rel="stylesheet" href="@("http://" + Context.Request.Host.ToString() + "/StyleSheet.css")">

<h1>Persons</h1>
<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Person Name</th>
            <th>eMAIL</th>
            <th>Datr  of Birth</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Country</th>
            <th>Address</th>
            <th>Receive News Letters</th>
        </tr>
    </thead>

    <tbody>
        @foreach (PersonResponse personResponse in Model)
        {
            <tr>
                <td style="width:15%">@personResponse.PersonName</td>
                <td style="width:20%">@personResponse.Email</td>
                <td style="width:13%">@personResponse.DateOfBirth?.ToString("dd MMM yyyy")</td>
                <td style="width:9%">@personResponse.Age</td>
                <td style="width:9%">@personResponse.Gender</td>
                <td style="width:10%">@personResponse.Country</td>
                <td style="width:10%">@personResponse.Address</td>
                <td style="width:20%">@personResponse.RecieveNewsLetters</td>
            </tr>
        }
    </tbody>
</table>
